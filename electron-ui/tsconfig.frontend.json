{
  "compilerOptions": {
    "target": "es2015",
    "module": "none",
    "lib": ["es2015", "dom"],
    "outDir": "dist/frontend",
    "rootDir": "resources",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["jquery", "jqueryui"],
    "noImplicitAny": false,
    "noImplicitThis": false
  },
  "include": [
    "resources/**/*.ts",
    "resources/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}